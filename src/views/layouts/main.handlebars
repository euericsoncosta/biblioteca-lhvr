    </div>

    <script>
        const themeToggle = document.getElementById('theme-toggle');
        const themeIcon = document.getElementById('theme-icon');

        function applyTheme(theme) {
            document.documentElement.classList.toggle('dark', theme === 'dark');
            if (themeIcon) themeIcon.innerText = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
            localStorage.setItem('theme', theme);
        }

        themeToggle?.addEventListener('click', () => {
            const isDark = document.documentElement.classList.contains('dark');
            applyTheme(isDark ? 'light' : 'dark');
        });

        function applyFontSize(size) {
            document.documentElement.style.setProperty('--base-font-size', size + 'px');
            localStorage.setItem('fontSize', size);
        }

        function changeFontSize(delta) {
            let size = parseInt(localStorage.getItem('fontSize')) || 16;
            size = Math.min(Math.max(size + delta, 12), 24);
            applyFontSize(size);
        }

        // Auto-fechar mensagens flash ap√≥s 5 segundos
        setTimeout(() => {
            const successMsg = document.getElementById('flash-success');
            const errorMsg = document.getElementById('flash-error');
            if (successMsg) successMsg.style.display = 'none';
            if (errorMsg) errorMsg.style.display = 'none';
        }, 5000);

        window.onload = () => {
            applyTheme(localStorage.getItem('theme') || 'light');
            applyFontSize(parseInt(localStorage.getItem('fontSize')) || 16);
        };
    </script>
</body>

</html>