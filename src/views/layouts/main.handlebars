            {{#if error}}
                <div id="flash-error" class="mb-6 p-4 bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400 rounded-2xl font-bold text-sm border border-rose-100 dark:border-rose-900/30 flex items-center gap-2">
                    <span>‚ö†Ô∏è</span> {{error}}
                </div>
            {{/if}}

            {{{body}}}
