        <main class="flex-grow p-8 pb-24 max-w-7xl mx-auto w-full">
            {{#if success}}
                <div id="flash-success" class="mb-6 p-4 bg-emerald-50 dark:bg-emerald-900/20 text-emerald-600 dark:text-emerald-400 rounded-2xl font-bold text-sm border border-emerald-100 dark:border-emerald-900/30 flex items-center gap-2">
