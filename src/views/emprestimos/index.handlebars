<div class="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
    <div>
        <h2 class="text-3xl font-black text-slate-800 dark:text-white tracking-tight">Movimentações</h2>
        <p class="text-slate-500 dark:text-slate-400 font-medium">Gestão de empréstimos e reservas de livros.</p>
    </div>

    <a href="/emprestimos/novo" class="px-6 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm shadow-xl shadow-indigo-100 dark:shadow-none hover:bg-indigo-700 transition-all flex items-center gap-2 active:scale-95">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" />
        </svg>
        Nova Operação
    </a>
</div>

<div class="bg-white dark:bg-slate-800 rounded-[2.5rem] shadow-sm border border-slate-100 dark:border-slate-700 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50/50 dark:bg-slate-900/50 text-slate-400 uppercase text-[10px] font-black tracking-widest border-b border-slate-50 dark:border-slate-700">
                    <th class="px-8 py-5">Livro</th>
                    <th class="px-8 py-5">Utilizador</th>
                    <th class="px-8 py-5">Tipo</th>
                    <th class="px-8 py-5">Saída / Prevista</th>
                    <th class="px-8 py-5">Estado</th>
                    <th class="px-8 py-5 text-right">Ações</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-slate-50 dark:divide-slate-700">
                {{#each movimentacoes}}
                <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-900/30 transition-colors group">
                    <td class="px-8 py-5">
                        <div class="flex flex-col">
                            <span class="font-bold text-slate-700 dark:text-slate-200">{{this.livro.nome}}</span>
                            <span class="text-[10px] font-mono text-slate-400 uppercase tracking-tighter">{{this.livro.tombo}}</span>
                        </div>
                    </td>

                    <td class="px-8 py-5">
                        <div class="flex flex-col">
                            <span class="font-bold text-slate-700 dark:text-slate-200">{{this.aluno.nome}}</span>
                            <span class="text-xs text-slate-400 font-mono tracking-tighter">{{this.aluno.documento}}</span>
                        </div>
                    </td>

                    <td class="px-8 py-5">
                        <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-wider 
                            {{#if (eq this.tipo 'EMPRESTIMO')}}
                                bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400
                            {{else}}
                                bg-amber-100 text-amber-600 dark:bg-amber-900/30 dark:text-amber-400
                            {{/if}}">
                            {{this.tipo}}
                        </span>
                    </td>

                    <td class="px-8 py-5 text-slate-500 dark:text-slate-400 text-sm font-medium">
                        <div class="flex flex-col gap-0.5">
                            <span class="text-xs opacity-70">S: {{dateFormat this.data_saida "DD/MM/YYYY"}}</span>
                            <span class="font-bold">P: {{dateFormat this.data_devolucao_prevista "DD/MM/YYYY"}}</span>
                        </div>
                    </td>

                    <td class="px-8 py-5">
                        <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-wider 
                            {{#if (eq this.status_movimentacao 'ativo')}}
                                bg-emerald-100 text-emerald-600 dark:bg-emerald-900/30 dark:text-emerald-400
                            {{else}}
                                bg-slate-100 text-slate-400 dark:bg-slate-700 dark:text-slate-500
                            {{/if}}">
                            {{this.status_movimentacao}}
                        </span>
                    </td>

                    <td class="px-8 py-5 text-right">
                        <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <a href="/emprestimos/editar/{{this.id}}" class="p-2 text-indigo-600 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 rounded-xl transition-colors" title="Gerir Movimentação">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="6" class="px-8 py-20 text-center text-slate-400 font-medium italic">
                        <div class="flex flex-col items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5S19.832 5.477 21 6.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                            </svg>
                            Nenhum empréstimo ou reserva registada até ao momento.
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>